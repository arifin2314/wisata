<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BFDAEF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="12dp"
                android:onClick="onClikPROFILE"
                android:src="@drawable/ipin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Arifin"
                android:textStyle="bold"
                android:textSize="12dp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_airterjun"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="2"
                        android:padding="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/t5" />

                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:background="#4D000000"
                        android:text="wisata air terjun"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/btn_pantai"
                        android:padding="15dp"
                        android:src="@drawable/pan2"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="2"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:background="#4D000000"
                        android:text="wisata pantai"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/btn_pengunungan"
                        android:padding="15dp"
                        android:src="@drawable/g5"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="2"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:background="#4D000000"
                        android:text="wisata pegunungan"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/btn_religi"
                        android:padding="15dp"
                        android:src="@drawable/re3"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="2"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        android:background="#4D000000"
                        android:text="wisata religi"
                        android:textColor="@color/white"
                        android:layout_marginBottom="30dp" />

                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>